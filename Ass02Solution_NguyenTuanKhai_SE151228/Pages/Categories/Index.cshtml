@model Ass02Solution_NguyenTuanKhai_SE151228.Pages.Categories.IndexModel
    <h1>Categories Management</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Catergory[0].CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catergory[0].CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catergory[0].Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Catergory)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CategoryId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CategoryId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
